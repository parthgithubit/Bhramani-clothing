{{ 'section-review.css' | asset_url | stylesheet_tag }}

  <div class="page-width">
    <div class="review-slider">
      <div class="main-title">
        {% if section.settings.section_title != blank %}
          <h2>{{ section.settings.section_title }}</h2>
        {% endif %}
        {% if section.settings.section_subtitle != blank %}
          <p class="subtitle">{{ section.settings.section_subtitle }}</p>
        {%endif %}
      </div>

      <div class="slider-text">
        {%for review_slider in section.blocks %}
          {% case review_slider.type %}
          {% when 'review_slider' %}
            
              <div class="text-block">
                {% if review_slider.settings.paragraph != blank %}
                  <p> {{ review_slider.settings.paragraph }} </p>
                {% endif %}
                {% if review_slider.settings.customer_name != blank %}
                  <h3> {{ review_slider.settings.customer_name }}  </h3>
                {% endif %}
                {% if review_slider.settings.customer_designation != blank %}
                  <span class="post"> {{ review_slider.settings.customer_designation }} </span>
                {%  endif %}
              </div>
          {% endcase %}
        {%endfor %}
        </div>
    </div>
  </div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    $('.slider-text').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 1500,
      arrows: false,
      dots: true
    });
  });

  {% comment %} $(document).ready(function(){
    $('.slider-text').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 2000,
      arrows: false,
      dots: true
    });
  }) {% endcomment %}
</script>

{% schema %}
{
  "name": "Section Review",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "section_title"
    },
    {
      "type": "text",
      "label": "SubTitle",
      "id": "section_subtitle"
    }
  ],
  "blocks": [
    {
      "type": "review_slider",
      "name": "review slider",
      "settings": [
        {
          "type": "richtext",
          "label": "Paragraph",
          "id": "paragraph"
        },
        {
          "type": "text",
          "label": "Name",
          "id": "customer_name"
        },
        {
          "type": "text",
          "label": "Designation",
          "id": "customer_designation"
        }
      ]     
    }
  ],
  "class": "section-review",
  "tag": "section",
  "presets": [
    {
      "name": "Section Review"
    }
  ]
}
{% endschema %}
