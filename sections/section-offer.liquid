{{ 'section-offer.css' | asset_url | stylesheet_tag }}

  <div class="page-width">
    <div class="section-title">
      <h2 class="main-title"> {{ section.settings.section_heading }} </h2>
      <h6 class="subtitle"> {{ section.settings.subtitle }} </h6>
    </div>

    <div class="row">
      {%for offercard in section.blocks %}
        <div class="col-6">
          <div class="sub-banner">
            <a href="#">
              {%if offercard.settings.card_img != blank %}
                <div class="sub-banner-img">
                  <img src="{{ offercard.settings.card_img | image_url }}" alt=""
                    loading="lazy"
                    width=""
                    height="">
                </div>
              {%endif %}
            </a>

                <div class="sub-banner-text">
                  {% if offercard.settings.cardtitle != blank %}
                    <h3> {{ offercard.settings.cardtitle }} </h3>
                  {% endif %}

                  {% if offercard.settings.cardsubtitle != blank  %}
                    <p> {{ offercard.settings.cardsubtitle }} </p>
                  {% endif %}

                  {% if offercard.settings.card_url != blank or offercard.settings.button_text != blank %}
                    <a href=" {{ offercard.settings.card_url }} " class="btnshopnow"> {{ offercard.settings.button_text }} </a>
                  {% endif %}
                </div>
              
          </div>
        </div>
        {%endfor %}
    </div>
  </div>


{% schema %}
  {
    "name": "Section Offer",
    "settings": [
      {
        "type": "text",
        "label": "Section Heading",
        "id": "section_heading"
      },
      {
        "type": "text",
        "label": "Subtitle",
        "id": "subtitle"
      }
    ],
    "tag": "section",
    "class": "section-offer",
    "blocks": [
      {
        "type": "offercard",
        "name": "OfferCard",
        "settings": [
          {
            "type": "image_picker",
            "label": "Card Image",
            "id": "card_img"
          },
          {
            "type": "text",
            "label": "Card Title",
            "id": "cardtitle",
          },
          {
            "type": "text",
            "label": "Card Subtitle",
            "id": "cardsubtitle",
          },
          {
            "type": "url",
            "label": "Button URL",
            "id": "button_url"
          },
          {
            "type": "text",
            "label": "Button Text",
            "id": "button_text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Section Offer"
      }
    ],
  }
{% endschema %}