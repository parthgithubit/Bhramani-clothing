{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

<footer class="site-footer">
  <div class="page-width">
    <div class="top-footer">
      <div class="footer-block">
        {% if section.settings.footer_image != blank %}
          <div class="footer-logo">
            <a href="{{ shop.url }}">
              <img
                class="footer-logo"
                src="{{ section.settings.footer_image | image_url }}"
                alt="{{ section.settings.footer_image.alt | escape }}"
                width="172"
                height="130"
                loading="lazy"
                aria-label="Footer Site Logo"
              >
            </a>
          </div>
        {% endif %}
        {% for cards in section.blocks %}
          {% case cards.type %}
            {% when 'social_media' %}
              <div class="social-media">
                <ul>
                  {% if cards.settings.fb_url != blank %}
                    <li>
                      <a href="{{ cards.settings.fb_url }}" target="_blank">
                        {{ 'facebook-icon.svg' | inline_asset_content }}
                      </a>
                    </li>
                  {% endif %}
                  {% if cards.settings.insta_url != blank %}
                    <li>
                      <a href="{{ cards.settings.insta_url }}" target="_blank">
                        {{ 'icon-instagram.svg' | inline_asset_content }}
                      </a>
                    </li>
                  {% endif %}
                  {% if cards.settings.twitter_url != blank %}
                    <li>
                      <a href="{{ cards.settings.twitter_url }}" target="_blank">
                        {{ 'x-twitter-icon.svg' | inline_asset_content }}
                      </a>
                    </li>
                  {% endif %}
                  {% if cards.settings.pinterest_url != blank %}
                    <li>
                      <a href="{{ cards.settings.pinterest_url }}" target="_blank">
                        {{ 'pinterest-icon.svg' | inline_asset_content }}
                      </a>
                    </li>
                  {% endif %}
                </ul>
              </div>
          {% endcase %}
        {% endfor %}
      </div>

      {% for cards in section.blocks %}
        {% case cards.type %}
          {% when 'menu_links' %}
            <div class="menulinks">
              <h5>{{ cards.settings.title }}</h5>
              <ul>
                {% for link in cards.settings.menu_link.links %}
                  <li>
                    <a target="_blank" href="{{ link.url }}">{{ link.title | escape }}</a>
                  </li>
                {% endfor %}
              </ul>
            </div>
        {% endcase %}
      {% endfor %}

      {%- if section.settings.newsletter_enable -%}
        <div class="footer-block__newsletter">
          {%- if section.settings.newsletter_heading != blank -%}
            <h5 class="footer-block__heading inline-richtext">{{ section.settings.newsletter_heading }}</h5>
          {%- endif -%}
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  placeholder="Email Address"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <button
                  type="submit"
                  class="newsletter-form__button field__button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                  value="Subscribe"
                >
                  Subscribe
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  <span class="svg-wrapper">
                    {{- 'icon-error.svg' | inline_asset_content -}}
                  </span>
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                <span class="svg-wrapper">
                  {{- 'icon-success.svg' | inline_asset_content -}}
                </span>
                {{- 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
      {%- endif -%}
    </div>

    <div class="bottom-footer">
      {% if section.settings.copyright_text != blank
        or section.settings.copyright_url != blank
        or section.settings.copyright_link_text != blank
      %}
        <div class="copyrigth_text">
          <p>
            {{ section.settings.copyright_text }}
            <a href="{{ section.settings.copyright_url }}">{{ section.settings.copyright_link_text }} </a>
          </p>
        </div>
      {% endif %}

      {% if section.settings.dev_name != blank %}
        <div class="footer_payment">
          <img src="{{ section.settings.card_payment | image_url }}" width="" height="" alt="" loading="lazy">
        </div>
      {% endif %}
    </div>
  </div>


</footer>


{% schema %}
{
  "name": "footer",
  "tag": "footer",
  "settings": [
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Newsletter Title"
    },
    {
      "type": "image_picker",
      "id": "footer_image",
      "label": "Footer Logo"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "default": true,
      "label": "Newsletter Checkbox"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text"
    },
    {
      "type": "url",
      "id": "copyright_url",
      "label": "Copyrigth Link"
    },
    {
      "type": "text",
      "id": "copyright_link_text",
      "label": "Copyrigth Link Text"
    },
    {
      "type": "image_picker",
      "id": "card_payment",
      "label": "Card Payment Image"
    }
  ],
  "blocks": [
    {
      "name": "Menu Links",
      "type": "menu_links",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "link_list",
          "id": "menu_link",
          "label": "Menu"
        }
      ]
    },
    {
      "name": "Social Media",
      "type": "social_media",
      "settings": [
        {
          "type": "url",
          "id": "fb_url",
          "label": "Facebook Link"
        },
        {
          "type": "url",
          "id": "insta_url",
          "label": "Instagram Link"
        },
        {
          "type": "url",
          "id": "twitter_url",
          "label": "Twitter Link"
        },
        {
          "type": "url",
          "id": "pinterest_url",
          "label": "Pinterest Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "footer",
      "settings": {}
    }
  ]
}
{% endschema %}
