{{ 'section-services.css' | asset_url | stylesheet_tag }}

    <div class="page-width">
        <div class="row">
            {% for block in section.blocks %}
            <div class="col">
                <div class="services-block">
                    {% if block.settings.block_img != blank %}
                        <div class="img-box">
                            <img src="{{ block.settings.block_img | image_url }}" height="" width="" alt="">
                        </div>
                    {% endif %}


                    {% if block.settings.block_heading != blank or block.settings.block_info != blank %}
                        <div class="info">
                            <h3> {{ block.settings.block_heading }} </h3>
                            <p> {{ block.settings.block_info }} </p>
                        </div>
                    {%endif %}
                </div>
            </div>
            {%endfor %}
        </div>
    </div>

{% schema %}
{
    "name": "Section Services",
    "settings": [],
    "blocks": [
        {
            "type": "services",
            "name": "Services-Card",
            "settings": [
                {
                    "type": "image_picker",
                    "label": "Image",
                    "id": "block_img"
                },
                {
                    "type": "text",
                    "label": "Heading",
                    "id": "block_heading"
                },
                {
                    "type": "inline_richtext",
                    "label": "Info",
                    "id": "block_info"
                }
            ]
        }
    ],
    "tag": "section",
    "class": "section-services",
    "presets": [
        {
            "name": "Section Services"
        }
    ]
}
{%endschema %}